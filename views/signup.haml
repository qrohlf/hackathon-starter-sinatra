.col-md-6.col-md-offset-3
    %form{method: 'post'}
        .form-group
            %label{for: "email"} Email address
            %input#email.form-control{placeholder: "Enter email", type: "email", name: "email", value: (defined? email) ? email : nil}
        .form-group
            %label{for: "password"} Password
            %input#password.form-control{placeholder: "Password", type: "password", name: "password"}
        .form-group
            %label{for: "password_confirmation"} Confirm Password
            %input#password_confirmation.form-control{placeholder: "Password", type: "password", name: "password_confirmation"}
        %button.btn.btn-primary{type: "submit"} Submit