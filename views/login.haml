.col-md-6.col-md-offset-3
    %form{method: 'post'}
        .form-group
            %label{for: "email"} Email address
            %input#email.form-control{placeholder: "Enter email", type: "email", name: "email", value: (defined? email) ? email : nil}
        .form-group
            %label{for: "password"} Password
            %input#password.form-control{placeholder: "Password", type: "password", name: "password"}
        %button.btn.btn-primary{type: "submit"} Log In
        %p.pull-right <a href="/account/forgot_password">forgot password</a>